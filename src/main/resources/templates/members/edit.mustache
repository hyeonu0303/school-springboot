{{> layout/header}}
<div class="container mt-5">
  <form action="/members/update/{{member.id}}" method="POST">
    <input type="hidden" name="id" value="{{member.id}}">
    <div class="mb-3">
      <label for="userName" class="form-label">이름</label>
      <input type="text" class="form-control" id="userName" name="name" value="{{member.name}}">
    </div>
    <div class="mb-3">
      <label for="userId" class="form-label">아이디</label>
      <input type="text" class="form-control" id="userId" name="userId" value="{{member.userId}}">
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">이메일</label>
      <input type="email" class="form-control" id="email" name="email" value="{{member.email}}">
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">비밀번호</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="password" value="{{member.password}}">
    </div>
    <div class="mb-3">
      <label for="phoneNumber" class="form-label">전화번호</label>
      <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" value="{{member.phoneNumber}}">
    </div>
    <div class="mb-3">
      <label for="address" class="form-label">주소</label>
      <input type="text" class="form-control" id="address" name="address" value="{{member.address}}">
    </div>
    <button type="submit" class="btn btn-outline-success">수정하기</button>
  </form>
</div>
